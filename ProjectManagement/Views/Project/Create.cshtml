@model ProjectManagement.Models.ProjectCreateViewModel

@{
    ViewBag.Title = "Create";

}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ProjectCreateViewModel</h4>
    <hr />
    <div class="alert alert-@ViewBag.alertType @ViewBag.alertVisibility" role="alert">
        @ViewBag.alertMessage
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Add Collaborators</label>
        <div class="col-md-10">
            <input id="emailTextBox" class="form-control text-box" type="text" value="">
            <button id="addBtn" type="button" class="btn">Add</button>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.emails, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.emails, new { @class = "form-control", @readonly="readonly" })
            @Html.ValidationMessageFor(model => model.emails, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#addBtn").click(function () {

            $.ajax({
                url: '/Project/verifyUserEmail',
                type: 'POST',
                datatype: "json",
                data: jQuery.param({
                    item: $("#emailTextBox").val(),
                }),
                success: function (r) {
                    if (r.id != 0) {
                        $("#alertMessage").removeClass("hidden");
                        $("#alertMessage").empty();
                        $("#alertMessage").append(r.message);
                    }
                    if ($("#emails").val().includes($("#emailTextBox").val())) {
                        $("#alertMessage").removeClass("hidden");
                        $("#alertMessage").empty();
                        $("#alertMessage").append("Email already added");
                    }
                    else {
                        $("#alertMessage").addClass("hidden");
                        addToList($("#emailTextBox").val());
                        $("#emailTextBox").val("");
                    }
                }
            });
            //addToList($("#emailTextBox").val());
        });
    });

    function addToList(item)
    {
        //$("#emailList").removeClass('hidden');
        //$("#emailList").append('<li class="list-group-item">' + item + '</li>');

        
        if ($("#emails").val() == "") {
            $("#emails").val(item);
        }
        else {
            $("#emails").val($("#emails").val()+','+item);
        }
        
    }


</script>


